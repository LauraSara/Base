<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Base</title>
  <link rel="stylesheet" href="/static/bootstrap.min.css">
  <link rel="stylesheet" href="/static/toastr.min.css">
  <link rel="stylesheet" href="/static/font-awesome.css">
  <!--jquery siempre arriba de los otros js -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>  
  <script src="/static/bootstrap.bundle.min.js"></script> 
  <script src="/static/toastr.min.js"></script>
  
</head>
<body>

  <section class="form-container">
    <div class="container">

      <div class="row">
        <form id="form-login" action="/login" method="POST" class="col-6">
          <h4>Ingrese a la plataforma</h4>

          
          <div class="email-container input-box">
            <label for="inputEmail" class="sr-only">
              Correo Electrónico
            </label>
            <input type="email" name="email" id="input-email" class="form-control" 
            placeholder="Ingrese su correo electrónico" autofocus="" required/>
          </div>
          
          <div class="form-group input-box">
            <label for="inputPassword" class="sr-only">
              Contraseña
            </label>
            <input name="password" type="password" id="input-password" class="form-control" 
            placeholder="Ingrese su contraseña" minlength="3" required/>
          </div>
          
          <button class="btn btn-lg btn-primary btn-block submit-btn" type="submit">Ingresar</button>
        </form>
      


        <form id="form-register" action="/register" name="form" method="POST" class="col-auto" onSubmit="return verificarClave()">´
          <h4>Registrese en nuestra plataforma</h4>

          <div class="name-container input-box">
            <label for="name" class="sr-only">Nombre</label>
            <input type="text" id="name" class="form-control" 
            name="name" placeholder="Ingrese su nombre" pattern="^[a-zA-Z]+$" required/>
          </div>
          
          <div class="email-container input-box">
            <label for="inputEmail" class="sr-only">
              Correo Electrónico
            </label>
            <input name="email" type="email" id="input-email" class="form-control" 
            placeholder="Ingrese su correo electrónico" autofocus="" required/>
          </div>
          
          
          <div class="form-group input-box">
            <label for="inputPassword" class="sr-only">
              Contraseña
            </label>
            <input name="password" type="password" id="input-password" class="form-control" 
            placeholder="Ingrese su contraseña" minlength="3" required/>
          </div>

          <div class="form-group input-box">
            <label for="inputPassword" class="sr-only">
              Confirme Contraseña
            </label>
            <input name="password_confirm" type="password" id="input-password" class="form-control" 
            placeholder="Repita su contraseña" minlength="3" required/>
          </div>
          
          <div class="col-6">
            <button class="btn btn-primary" type="submit">Registrarse</button>
          </div>          
        </form>
      </div>

    </div>   
  </section>
  <script>
    $(document).ready(function () {
      <% for(var error of errors){ %>
        toastr.error('<%=error%>');
      <% } %>
    });
    
    //para verificar que las contraseñas ingresadas sean iguales    
    function verificarClave(){
      let password = document.form.password.value;
      let password_confirm = document.form.password_confirm.value;

      if (password != password_confirm) {
        toastr.error("Las contraseñas no coinciden");
        document.form
        return false;
      }else {
        document.form.submit;
        return true;
      }
    }

    </script>
</body>
</html>